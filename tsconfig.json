{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2022"
  },
  "include": ["src/**/*"],
  "exclude": ["**/dist/*", "**/public/*"],
  "typeAcquisition": {
    "enable": true
  },
  "ts-node": {
    "esm": true
  }
}
